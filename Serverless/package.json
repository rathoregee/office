{
  "name": "apigateway-poc-func",
  "version": "1.0.0",
  "description": "Serverless Framewrok NodeJS AWS Lambda function",
  "private": true,
  "main": "dist/functions/router.js",
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "bundle": "serverless package --package artifacts && cpy artifacts/*.zip .",
    "deploy": "serverless deploy --artifact apigateway-poc-func.zip --force",
    "test": "cross-env LOG_LEVEL=warn nyc --reporter=text mocha --reporter=spec",
    "test:ci": "nyc mocha",
    "test:html": "cross-env LOG_LEVEL=warn nyc --reporter=html --reporter=text-summary mocha --reporter=spec",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  },
  "author": "DataFlow_POC",
  "license": "TBC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "pino": "^6.6.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/aws-lambda": "^8.10.64",
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/pino": "^6.3.2",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "aws-sdk": "^2.1135.0",
    "aws-sdk-mock": "^5.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.4.0",
    "mocha-multi-reporters": "^1.1.7",
    "mocha-sonarqube-reporter": "^1.0.2",
    "mocha-teamcity-reporter": "^3.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "serverless": "^1.83.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-dotenv-plugin": "^3.0.0",
    "serverless-prune-plugin": "^1.4.3",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.4.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
