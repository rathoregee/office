{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "commonjs": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "ignorePatterns": [ "dist/", "*.js","*.spec.ts" ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            { "args": "none" }
        ]
    }
}
